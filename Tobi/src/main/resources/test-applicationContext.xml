	 <!-- transactionMananger는 id값이 transactionManager라면 생략가능 -->
	 <tx:advice id="transactionAdvice" >
	 	<tx:attributes>
	 		<!-- propagation 값은 REQUIRED라면 생략가능 -->
	 		<tx:method name="get*" read-only="true"/>
	 		<tx:method name="*" />
	 	</tx:attributes>
	 </tx:advice>
	
